	li{
	padding-top: 15px;
	
	}
	
	.contenu{
	background-color: #e6e6e6;
    	margin-bottom: 0%;
    	margin-top:5%;
    	margin-left: 10%;
    	margin-right:10%;
    	width: 80%;
    	padding-bottom:100%;

    	margin-bottom:0%;
    	padding-top: 2%;
	}

	    div.contour{
    	background-color: white;
    	margin-left: 5%;
    	margin-right:5%;
    	border-radius: 4px;
    	padding:20px;



    }
	
	h1{
	margin-top: 5%;
	
	
	}
	
	div.contourService{
	background-color:rgba(255,255,255,0.3) ;
	padding: 5px;
	padding-left: 5%;
	margin-left: 10%;
	margin-right: 10%;
	margin-top: 5%;
	box-shadow: 0px 0px 4px 2px rgba(0,0,0,0.6);
	vertical-align: top;
	border-bottom: none;
	border-radius: 5px;
	text-align: center;

}
	div.afficher{
	display:none;
	padding-left: 20px;
	padding-top: -5%;
	}

.button {
  background-color: white;
  color: black;
  border: 2px solid #008CBA;
  border-radius: 4px;
}
.button {
  -webkit-transition-duration: 0.4s; /* Safari */
  transition-duration: 0.4s;
}

.button:hover {
  background-color: #008CBA;
  color: white;
}
	
</style>
<script>
function show(i) {
  var x = document.getElementById(i);
  if (x.style.display === "none") {
    x.style.display = "block";
  } else {
    x.style.display = "none";
  }
} 
</script>
<div class="contenu">
<h1>Liste des services de l'hopital :</h1> 
<br/>
   <div class="contour">
    <ul class="liste">{%for service in services %}
	<div class="contourService">
        <li> {{service.libelle}}<br/>
			<div id="{{service.id}}" class="afficher">
			{%for medecin in medecins %}
			{%if medecin.getService.getId==service.id %}
			{{medecin.nom}} {{medecin.prenom}}<br/>
			{%endif%}
			{%endfor%}
			</div> 
			<button class="button" onclick="show({{service.id}})">Afficher les m√©decins de ce service</button>
			
		</li>
		</div>
	{%endfor%}

    </ul>
</div>
</div>
</div>
{% endblock %}
